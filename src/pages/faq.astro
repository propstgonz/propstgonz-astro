---
import Layout from "../layouts/Layout.astro";
import { faq } from "../data/faq.ts";

const PAGE_PROPS = {
  title: "FAQ",
  description: "FAQ.",
  image: "/metaimage.png",
};
---

<Layout {...PAGE_PROPS}>
  <header class="max-w-2xl mx-auto mb-12 px-6 py-8">
    <h1 class="text-2xl font-bold text-[#D99058] mb-4">FAQ</h1>
    <p class="text-sm text-gray-400">Frequently Asked Questions about this site and me.</p>
  </header>

  <main class="max-w-2xl mx-auto space-y-6 px-6">
    {faq.map(faq => (
      <section class="bg-[#1f2937] p-6 rounded-lg border border-gray-600 shadow">
        <h2 class="text-lg font-semibold text-[#D99058] mb-3">{faq.question}</h2>
        <p class="text-sm text-cyan-300" set:html={faq.answer}></p>
      </section>
    ))}
  </main>

  <script src="../assets/scripts/whatismyip.js"></script>
</Layout>
