---
import Layout from "../layouts/Layout.astro";
import PCInfo from "../components/PCInfo.astro";
import { computers } from "../data/computers";
export const prerender = true

const PAGE_PROPS = {
  title: "Computers",
  description: "my computers.",
  image: "/metaimage.png",
};
---

<Layout {...PAGE_PROPS}>
  <main
    class="min-h-screen flex flex-col items-center justify-center gap-6 p-4 sm:p-6"
  >
    {
      computers.map((pc) => (
        <PCInfo server:defer
          name={pc.name}
          ascii={pc.ascii}
          specs={Object.fromEntries(
            Object.entries(pc.specs).map(([k, v]) => [k, v ?? ""])
          )}
        />
      ))
    }
  </main>
  <div class="flex justify-center p-4">
    <a href="/hub" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">
      Back to hub
    </a>
  </div>
</Layout>
