---
import { cosas } from "../data/cosas";
import type { Cosa } from "../types/cosas";
---

<div class="bg-[#0f1117] min-h-screen p-8 font-mono">
  <h2 class="text-3xl font-bold text-gray-200 mb-6 text-center">
    Sites I like and other pages
  </h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
    {
      cosas.map((cosa: Cosa) => (
        <div class="bg-gradient-to-br from-gray-900 to-gray-800 rounded-xl shadow-md overflow-hidden flex flex-col transition-transform transform hover:-translate-y-1 hover:shadow-xl scale-90 border border-gray-700">
          <div class="w-full aspect-video">
            <img
              src={cosa.img}
              alt={cosa.title}
              class="w-full h-full object-cover rounded-t-xl"
              loading="eager"
            />
          </div>
          <div class="p-4 flex-1 flex flex-col justify-between">
            <h3 class="text-lg font-semibold text-gray-200 mb-2">{cosa.title}</h3>
            <p class="text-gray-400 text-sm mb-4">{cosa.description}</p>
            <a
              href={cosa.link}
              class="mt-auto inline-block bg-blue-600 text-white text-center px-3 py-1.5 rounded hover:bg-blue-500 transition-colors"
            >
              Ver m√°s
            </a>
          </div>
        </div>
      ))
    }
  </div>
</div>
