---
import { slide } from "astro:transitions";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import ClientRouter from "astro/components/ClientRouter.astro";

const { title, description, image } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-[#0f1117] text-gray-200 font-mono">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>~ propstgonz | {title}</title>
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <meta
      name="description"
      content=`propstgonz - ${description}`
    />
    <meta property="og:image" content={image} />
    <!-- Google tag (gtag.js) -->
    <script
      async
      is:inline
      src="https://www.googletagmanager.com/gtag/js?id=G-4WG6H9DMB9"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        window.dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-4WG6H9DMB9");
    </script>
    <ClientRouter />
  </head>
  <body transition:animate={slide({ duration: "1s" })}>
    <slot />
    <Footer />
  </body>
</html>
